<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica_NavegacionGalerias_MarioLlamaGarcia.Detalles"
             Title="Detalles">

    <ScrollView>
        <VerticalStackLayout>
            
            <!--Imagen-->
            <Frame 
                Padding="10"
                CornerRadius="10"
                BackgroundColor="LightGray"
                HasShadow="True">
                
            <!--Texto-->
            <Label 
                x:Name=" textoLBL"
                Text="{Binding Texto}"
                FontSize="20"
                TextColor="Black"
                FontAttributes="Bold"
                LineBreakMode="WordWrap"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Start" />

            </Frame>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>